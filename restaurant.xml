<?xml version="1.0" encoding="UTF-8"?>
  <display-name>SimpleServletProject</display-name> <!--Application title on browser-->
  <servlet>
    <servlet-name>simpleServlet</servlet-name> <!--Namespace for servlet-->
    <servlet-class>org.codingdojo.tutorial.SimpleServlet</servlet-class> <!--Use this SimpleServlet java file in org/codingdojo/tutorial folder once servlet name is called-->
  </servlet>
  <servlet-mapping>
    <servlet-name>simpleServlet</servlet-name> <!--Servlet name of /simpleServlet url-->
    <url-pattern>/simpleServlet</url-pattern> <!--route at /simpleServlet-->
  </servlet-mapping>
  <servlet>
    <servlet-name>xmlServlet</servlet-name>
    <servlet-class>or.codingdojo.tutorial.XmlServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>xmlServlet</servlet-name>
    <url-pattern>/xmlServletpath</url-pattern>
  </servlet-mapping>
  <welcome-file-list> <!--Html file served at root url-->
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>